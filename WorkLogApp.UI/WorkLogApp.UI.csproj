      <Project>{91288E47-3D54-48BE-9FB7-DBBE61AC6362}</Project>
      <Name>WorkLogApp.Core</Name>
    </ProjectReference>
    <ProjectReference Include="..\WorkLogApp.Services\WorkLogApp.Services.csproj">
      <Project>{A032F8D8-0E41-4872-8D49-87E5E6AB2F71}</Project>
      <Name>WorkLogApp.Services</Name>
    </ProjectReference>
  </ItemGroup>
  <!-- 复制 SDK 样式 Services 项目的输出到 UI 输出目录，解决混合项目引用不自动复制的问题 -->
  <Target Name="CopyServicesOutput" AfterTargets="Build">
    <ItemGroup>
      <ServicesCopy Include="..\WorkLogApp.Services\bin\$(Configuration)\net472\WorkLogApp.Services.dll" />
      <ServicesCopy Include="..\WorkLogApp.Services\bin\$(Configuration)\net472\WorkLogApp.Services.pdb" />
    </ItemGroup>
    <Copy SourceFiles="@(ServicesCopy)" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true" />
  </Target>
  <ItemGroup>
    <Content Include="..\WorkLogApp.Services\bin\$(Configuration)\net472\WorkLogApp.Services.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\WorkLogApp.Services\bin\$(Configuration)\net472\WorkLogApp.Services.pdb">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <PropertyGroup>
    <DistDir>$(MSBuildProjectDirectory)\..\dist</DistDir>
  </PropertyGroup>
  <Target Name="PublishDist" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <MakeDir Directories="$(DistDir)" />
    <MakeDir Directories="$(DistDir)\Configs" />
    <MakeDir Directories="$(DistDir)\Templates" />
    <ItemGroup>
      <DistBin Include="$(OutDir)WorkLogApp.UI.exe" />
      <DistBin Include="$(OutDir)*.dll" />
      <DistBin Include="$(OutDir)WorkLogApp.UI.exe.config" />
    </ItemGroup>
    <Copy SourceFiles="@(DistBin)" DestinationFolder="$(DistDir)" SkipUnchangedFiles="true" />
    <ItemGroup>
      <DistCfg Include="$(OutDir)Configs\*.json" />
      <DistTpl Include="$(OutDir)Templates\templates.json" />
    </ItemGroup>
    <Copy SourceFiles="@(DistCfg)" DestinationFolder="$(DistDir)\Configs" SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(DistTpl)" DestinationFolder="$(DistDir)\Templates" SkipUnchangedFiles="true" />
    <ItemGroup>
      <FontCandidate Include="$(OutDir)font.ttf" Condition="Exists('$(OutDir)font.ttf')" />
    </ItemGroup>
    <Copy SourceFiles="@(FontCandidate)" DestinationFolder="$(DistDir)" SkipUnchangedFiles="true" />
  </Target>
  <!-- 设计期 resx：仅在 VS (MSBuildRuntimeType=Full) 下参与编译；
       在 dotnet CLI (MSBuildRuntimeType=Core) 下跳过，以避免 x86 GenerateResource 宿主问题。 -->
  <ItemGroup Condition="'$(MSBuildRuntimeType)' == 'Full'">
    <EmbeddedResource Include="Forms\CategoryManageForm.resx">
      <DependentUpon>CategoryManageForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="Forms\ItemEditForm.resx">
      <DependentUpon>ItemEditForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="Forms\MainForm.resx">
      <DependentUpon>MainForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="Forms\ItemCreateForm.resx">
      <DependentUpon>ItemCreateForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="Forms\ImportWizardForm.resx">
      <DependentUpon>ImportWizardForm.cs</DependentUpon>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
    <None Include="Forms\CategoryManageForm.resx">
      <DependentUpon>CategoryManageForm.cs</DependentUpon>
    </None>
    <None Include="Forms\ItemEditForm.resx">
      <DependentUpon>ItemEditForm.cs</DependentUpon>
    </None>
    <None Include="Forms\MainForm.resx">
      <DependentUpon>MainForm.cs</DependentUpon>
    </None>
    <None Include="Forms\ItemCreateForm.resx">
      <DependentUpon>ItemCreateForm.cs</DependentUpon>
    </None>
    <None Include="Forms\ImportWizardForm.resx">
      <DependentUpon>ImportWizardForm.cs</DependentUpon>
    </None>
  </ItemGroup>
