  <!-- 为避免在 dotnet build 下触发 x86 GenerateResource 宿主问题，暂不编译 resx。若需使用 VS 设计器自动资源，请在本地 VS 环境启用。 -->
  <ItemGroup>
    <EmbeddedResource Include="app.ico" />
    <None Include="App.config" />
    <None Include="..\Configs\dev.config.json">
      <Link>Configs\dev.config.json</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\Configs\prod.config.json">
      <Link>Configs\prod.config.json</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
